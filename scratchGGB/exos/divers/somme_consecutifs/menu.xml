<?xml version="1.0"?>
<xml id="toolbox" style="display: none">
    <category name="Questions" id="demos" colour="#FFFF00" secondaryColour="#FFFF00">
			<button text="1) 3 entiers consécutifs" callbackKey="demo11" prog="exos/divers/somme_consecutifs/q1_prog.xml" geo="exos/divers/somme_consecutifs/geogebra.ggb">
<![CDATA[
Affiche les deux entiers suivant n
]]>
			</button>
			<button text="2) Divisibilité de la somme" callbackKey="demo12" prog="exos/divers/somme_consecutifs/q2_prog.xml" geo="exos/divers/somme_consecutifs/geogebra.ggb">
<![CDATA[
a) Affiche la somme de n, n+1 et n+2
b) Essaie plusieurs valeurs pour n : somme divisible par 3 ?
]]>
			</button>
			<button text="3) 4 entiers consécutifs" callbackKey="demo13" prog="exos/divers/somme_consecutifs/q3_prog.xml" geo="exos/divers/somme_consecutifs/geogebra.ggb">
<![CDATA[
a) Essaie plusieurs valeurs pour n : somme divisible par 4 ?
b) Remplace les 4 blocs "Augmenter" par un bloc "Répéter"
]]>
			</button>
	</category>
    <category name="GeoGebra" id="ggb"  colour="#798933" secondaryColour="#798933">
            <block type="ggb_point">
				<value name="NOM">
					<shadow type="text">
						<field name="TEXT"></field>
					</shadow>
				</value>
				<value name="X">
					<shadow type="math_number">
						<field name="NUM"></field>
					</shadow>
				</value>
				<value name="Y">
					<shadow type="math_number">
						<field name="NUM"></field>
					</shadow>
				</value>
			</block>
            <block type="ggb_commande_2pts">
				<value name="NOM">
					<shadow type="text">
						<field name="TEXT"></field>
					</shadow>
				</value>
				<value name="OBJ1">
					<shadow type="text">
						<field name="TEXT"></field>
					</shadow>
				</value>
				<value name="OBJ2">
					<shadow type="text">
						<field name="TEXT"></field>
					</shadow>
				</value>
			</block>
			<block type="ggb_couleur_remplissage">
				<value name="OBJ1">
					<shadow type="text">
						<field name="TEXT"></field>
					</shadow>
				</value>
				<value name="COLOR">
					<shadow type="colour_picker">
						<field name="COLOUR">#00ff00</field>
					</shadow>
				</value>
			</block>
    </category>
    <category name="Tortue" id="motion"  colour="#4C97FF" secondaryColour="#3373CC">
			<block type="avancer_reculer">
				<value name="NAME">
					<shadow type="math_number">
						<field name="NUM"></field>
					</shadow>
				</value>
			</block>
			<block type="var_gauche_droite">
				<value name="NAME">
					<shadow type="math_number">
						<field name="NUM">90</field>
					</shadow>
				</value>
			</block>
			<block type="tortue_teleport">
				<value name="ABS">
					<shadow type="math_number">
						<field name="NUM">0</field>
					</shadow>
				</value>
				<value name="ORD">
					<shadow type="math_number">
						<field name="NUM">0</field>
					</shadow>
				</value>
			</block>
			<block type="couleur_remplissage">
				<value name="COLOR">
					<shadow type="colour_picker">
						<field name="COLOUR">#00ff00</field>
					</shadow>
				</value>
			</block>
			<block type="baisser_lever_stylo"></block>
			<block type="debut_fin_remplissage"></block>
    </category>
    <category name="%{BKY_CATEGORY_CONTROL}" id="control" colour="#FFAB19" secondaryColour="#CF8B17">
        <block type="control_repeat" id="control_repeat">
            <value name="TIMES">
                <shadow type="math_whole_number">
                    <field name="NUM"></field>
                </shadow>
            </value>
        </block>
        <block type="control_if" id="control_if"></block>
        <block type="control_if_else" id="control_if_else"></block>
    </category>
    <category name="Calculs" id="operators" colour="#40BF4A" secondaryColour="#389438">
			<block type="looks_say" id="looks_say">
				<value name="MESSAGE">
					<shadow type="text">
						<field name="TEXT"></field>
					</shadow>
				</value>
			</block>
        <block type="operator_add" id="operator_add">
            <value name="NUM1">
                <shadow type="math_number">
                    <field name="NUM"></field>
